<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splashzone">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/beautifulbooks"
        >


        <ImageView
            android:id="@+id/cloverimg"
            android:layout_width="216dp"
            android:layout_height="209dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:elevation="6dp"
            android:src="@drawable/logotreal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="App Logo" />

        <LinearLayout
            android:id="@+id/accbtn"
            android:layout_width="378dp"
            android:layout_height="175dp"
            android:layout_marginBottom="80dp"
            android:elevation="6dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/cloverimg">




        </LinearLayout>


        <LinearLayout
            android:id="@+id/splashtext"
            android:layout_width="377dp"
            android:layout_height="138dp"
            android:elevation="6dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="WELCOME"
                android:textColor="#fff"
                android:textSize="31sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginStart="5dp"
                android:text="★ Mejor Educación, Mas Tiempo"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold"

                />


        </LinearLayout>

        <!--Menu-->


        <LinearLayout
            android:id="@+id/hometext"
            android:layout_width="349dp"
            android:layout_height="81dp"
            android:elevation="6dp"
            android:gravity="left"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ProEduk"
                android:fontFamily="@font/hintown"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="55sp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="307dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:text="★ Calidad del maestro"
                android:fontFamily="@font/hintown"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"

                />


        </LinearLayout>


        <ImageView
            android:id="@+id/bgapp"
            android:layout_width="580dp"
            android:layout_height="850dp"
            android:scaleType="fitXY"
            android:src="@drawable/bgapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>


