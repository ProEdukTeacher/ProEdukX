<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#114c9e" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#14D4FE"
                android:endColor="#3480eb"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4aa5d4" />
            <corners
                android:topRightRadius="30dp"
                android:topLeftRadius="30dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>