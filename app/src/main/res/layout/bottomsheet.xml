<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_design"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/handle"
            android:contentDescription="Handle Item" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Cambiar Icono"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View

            android:layout_width="match_parent"
            android:layout_height="5dp"


            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:background="#D9D9D9" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i1" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i2" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i3" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i4" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i5" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i6" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i7" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i12" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i8" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i16" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i18" />

                    <ImageView

                        android:layout_width="110dp"
                        android:layout_height="126dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/i19" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>