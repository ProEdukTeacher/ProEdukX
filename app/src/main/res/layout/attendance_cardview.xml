<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp"
    app:contentPadding="0dp"
    app:contentPaddingBottom="11dp"

    >


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:id="@+id/noselay"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="0dp"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/changeag_btn">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/circlebook" />


            <TextView
                android:id="@+id/tvsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/imageView"
                android:fontFamily="@font/poppins"
                android:gravity="center_horizontal|center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Tvcourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tvsubject"
                android:fontFamily="@font/poppins"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />
        </RelativeLayout>


        <View
            android:id="@+id/vicil2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/noselay"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vicil2"
            android:layout_marginTop="5dp"

            android:text="24 de Octubre de 2022"
            android:textAlignment="center"
            android:textSize="10sp" />

        <View
            android:id="@+id/vicil3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/date_tv"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#D9D9D9" />

        <ImageView
            android:id="@+id/present_iv"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/present_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/present_iv"
            android:text="P:17"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/absent_iv"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/present_tv"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/absent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/absent_iv"
            android:text="A:2"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/late_iv"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/absent_tv"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/late_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/late_iv"
            android:text="T:1"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/excused_iv"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/late_tv"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/excused_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/excused_iv"
            android:text="E:2"
            android:textSize="15dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>


