<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp"

    >


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_margin="0dp"
        android:background="@color/cardview_light_background"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/noselay"
            android:layout_width="368dp"
            android:layout_height="142dp"
            android:layout_marginStart="0dp"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/blue_polygon">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/circlebook" />


            <TextView
                android:id="@+id/tvsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/imageView"
                android:background="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Historia"
                android:gravity="center_horizontal|center_vertical"

                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Tvcourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsubject"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/imageView"
                android:layout_toRightOf="@id/imageView"
                android:fontFamily="@font/poppins"
                android:text="Octavo Grado"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />
        </RelativeLayout>


        <View
            android:id="@+id/vicil2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/noselay"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 de Octubre de 2022"
            android:layout_below="@+id/vicil2"

            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            />

        <View
            android:id="@+id/vicil3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/date_tv"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:background="#D9D9D9" />

        <ImageView
            android:id="@+id/present_iv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/greendot"
            android:layout_below="@+id/vicil3"/>

        <TextView
            android:id="@+id/present_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/present_iv"
            android:text="P: 17"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/absent_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/present_tv"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/absent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/vicil3"
            android:layout_toRightOf="@+id/absent_iv"
            android:text="A: 2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/late_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/absent_tv"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/late_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/vicil3"
            android:layout_toRightOf="@+id/late_iv"
            android:text="T: 2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/excused_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/vicil3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/late_tv"
            android:background="@drawable/greendot" />

        <TextView
            android:id="@+id/excused_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/vicil3"
            android:layout_toRightOf="@+id/excused_iv"
            android:text="T: 2"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>


